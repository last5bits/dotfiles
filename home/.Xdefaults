#include ".Xresources.d/termite-color-scheme"

URxvt*scrollBar:         false
URxvt*scrollBar_right:   false
URxvt*transparent:       false
URxvt.visualBell: true

! {{
! Font
URxvt.font: xft:Ubuntu Mono derivative Powerline:pixelsize=17
URxvt.letterSpace: -1
*antialias:  true
*autohint:   true
! }}

! {{
! Font size hotkeys
URxvt.perl-ext-common:  ...,font-size
URxvt.keysym.C-plus:    perl:font-size:increase
URxvt.keysym.C-minus:   perl:font-size:decrease
URxvt.keysym.C-S-Up:    perl:font-size:incglobal
URxvt.keysym.C-S-Down:  perl:font-size:decglobal
! }}

! {{
! Clickable URLs
URxvt.perl-ext-common:   default,matcher
URxvt.url-launcher:     /usr/bin/xdg-open
URxvt.matcher.button:   1
URxvt.keysym.C-Delete:  perl:matcher:last
URxvt.keysym.M-Delete:  perl:matcher:list
! }}

! {{
! Rebinding copy & paste in urxvt
! https://stackoverflow.com/questions/39884093/rebinding-copy-paste-in-urxvt
! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755:        false
URxvt.iso14755_52:     false

! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I don't know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard
! }}
